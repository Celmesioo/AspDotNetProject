@model List<DataLogic.Models.ApplicationUser>

@{
    ViewBag.Title = "Index";
}

<h2>Hittade användare:</h2>

<div style="max-height:750px; overflow-y:scroll;">
    <hr />
    @foreach (var user in Model)
    {
    <div class="card front-cards" style="width: 20rem;">
        <img class="card-img-top image-size" src="@Url.Action("Image", "Home", new { id = user.Id} )" alt="Card image cap">
        <div class="card-block">
            <h4 class="card-title">@Html.ActionLink(user.FirstName + " " + user.LastName, "Details", "Account", new { id = user.Id }, null)</h4>

        </div>
    </div>
     }
</div>
